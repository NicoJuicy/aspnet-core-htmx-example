@page "{id:int?}"
@model MusicManager.Web.Pages.Artists.IndexModel
@{
    ViewData["Title"] = "Artists";
}

<h1>Artists</h1>

<p>
    <a href="#"
       hx-get="@Url.Page("./Index", "EditModal")"
       hx-trigger="click"
       hx-target="#itemModalContainer">
        Add Artist
    </a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search:
            <input type="text" name="searchString" value="@Model.Artists.PagingData.CurrentFilter" />
            <input type="hidden" name="sortOrder" value="@Model.CurrentSort" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index" asp-route-sortOrder="@Model.CurrentSort">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th hx-boost="true">
                <sort-link page="./Index"
                           route-sortOrder="@Model.NameSort"
                           route-currentFilter="@Model.Artists.PagingData.CurrentFilter"
                           current-sort="@Model.CurrentSort"
                           display-name="@Html.DisplayNameFor(model => model.Artists[0].Name)" />
            </th>
            <th hx-boost="true">
                <sort-link page="./Index"
                           route-sortOrder="@Model.AlbumCountSort"
                           route-currentFilter="@Model.Artists.PagingData.CurrentFilter"
                           current-sort="@Model.CurrentSort"
                           display-name="@Html.DisplayNameFor(model => model.Artists[0].AlbumCount)" />
            </th>
            <th hx-boost="true">
                <sort-link page="./Index"
                           route-sortOrder="@Model.CreatedSort"
                           route-currentFilter="@Model.Artists.PagingData.CurrentFilter"
                           current-sort="@Model.CurrentSort"
                           display-name="@Html.DisplayNameFor(model => model.Artists[0].Created)" />
            </th>
            <th hx-boost="true">
                <sort-link page="./Index"
                           route-sortOrder="@Model.UpdatedSort"
                           route-currentFilter="@Model.Artists.PagingData.CurrentFilter"
                           current-sort="@Model.CurrentSort"
                           display-name="@Html.DisplayNameFor(model => model.Artists[0].Updated)" />
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Artists)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AlbumCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    <a href="#"
                       hx-get="@Url.Page("./Index", "EditModal", values: new { id = item.Id })"
                       hx-trigger="click"
                       hx-target="#itemModalContainer"><i class="bi-pencil" role="img" aria-label="Edit"></i></a>
                    <a href="#"
                       hx-get="@Url.Page("./Index", "DetailsModal", values: new { id = item.Id })"
                       hx-trigger="click"
                       hx-target="#itemModalContainer"><i class="bi-info-circle" role="img" aria-label="Details"></i></a>
                    <a href="#"
                       onclick="AppLib.confirmDelete(@item.Id, '@item.Name')"><i class="bi-trash" role="img" aria-label="Delete"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_Pager", Model.Artists.PagingData)

<div id="itemModalContainer"></div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Artist</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="deleteItemName"></strong>?
            </div>
            <div class="modal-footer">
                <!form hx-delete="@Url.Page("./Index")"
                       onsubmit="AppLib.preventMultiSubmit()">
                    <input id="deleteItemId" name="deleteItemId" type="hidden" value="">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                    @Html.AntiForgeryToken()
                </!form>
            </div>
        </div>
    </div>
</div>